{% set activePage = page.url | url %}

<footer class="footer region" role="contentinfo">
			<div class="footer__container wrapper">
				<div class="footer__item">
					<a class="brand" href="/" {% if activePage === '/' %} aria-current="page" {% endif %}>
						{% include "svg/logo.svg" %}
					</a>
				</div>
				<div class="footer__item">
					<a href="/" {% if activePage === '/' %} aria-current="page" {% endif %} class="footer__title">Головна</a>
					<ul class="footer__list" role="list">
            {% for item in navigation.main %}
						<li class="footer__list-item"><a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url)
          | safe }}>{{ item.text }}</a></li>
            {% endfor %}
					</ul>
				</div>
				<div class="footer__item">
					<p class="footer__title">Послуги</p>
					<ul class="footer__list" role="list">
            {% for item in navigation.services %}
						<li class="footer__list-item"><a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url)
          | safe }}>{{ item.text }}</a></li>
              {% endfor %}
					</ul>
				</div>
				<div class="footer__item">
          {% for item in navigation.policy %}
					<a href="{{ item.url }}" class="footer__link">{{ item.text }}</a>
					{% endfor %}
					<ul class="footer__list" role="list">
						<li class="footer__list-item">
							&copy; 2016 - {% year %} {{ meta.siteDescription }}
						</li>
						<li class="footer__list-item"><a href="mailto:advocate.rivne@gmail.com">advocate.rivne@gmail.com</a>
						</li>
						<li class="footer__list-item"><a href="tel:+380971336851">+38 097 133 68 51</a></li>
					</ul>
					<ul class="footer__icons" role="list" aria-label="Social links">
          {% for item in social %}
					<li>
						<a href="{{ item.url }}" rel="me">
							<div aria-hidden="true">{% include 'svg/' + item.icon %}</div>
						</a>
					</li>
          {% endfor %}
					</ul>
				</div>
			</div>
		</footer>


